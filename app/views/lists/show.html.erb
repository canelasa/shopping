<h1><%= @list.name %> <%= link_to 'Edit', edit_list_path(@list) %>| <%= link_to 'Delete', list_path(@list), method: :delete, data: {confirm:'Are you sure you want to delete this?'} %></h1>
<i><%= @list.description %></i>
<i><%= @list.name %></i>
<i><%= @list.description %></i>
<i><%= @list.price %></i>
