<h1><%= @list.name %> <%= link_to 'Edit', edit_list_path(@list) %>| <%= link_to 'Delete', list_path(@list), method: :delete, data: {confirm:'Are you sure you want to delete this?'} %></h1>
<i><%= @list.description %></i>

  <table class="table table-hover">
    <thead>

      <tr>
        <!-- <th>Shopping list name</th> -->
        <th>Item</th>
        <th>SKU #</th>
        <th>price</th>
        <th>quantity</th>
        <th>action<th>
      </tr>
    </thead>

    <tbody>
      <% @list.items.each do |item| %>
        <% if item.list.present? %>
          <tr>
            <!-- <td><%= link_to item.list.name, list_path(item.list) %></td> -->
            <td> <%= item.name %></td>
            <td><%= item.sku %></td>
            <td><%= item.price %></td>
            <td><%= item.quantity %></td>
            <td><%= link_to 'Destroy', list_item_path(item.list, item),
            method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger btn-xs' %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>

<h1>Add an item </h1>
<%= form_for @item, url: list_items_path(@list) do |f| %>
  <%= f.label :name %> :
  <%= f.text_field :name %>
  <%= f.label :sku_number %> :
  <%= f.text_field :sku  %>
  <%= f.label :price %> :
  <%= f.text_field :price  %>
  <%= f.label :quantity %> :
  <%= f.text_field :quantity  %>
  <%= f.submit 'Create List' %>
<% end %>
