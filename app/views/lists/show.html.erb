<h1>Add an item </h1>
<%= form_for @list, url: list_path(@list) do |f| %>
  <%= f.label :name %> :
  <%= f.text_field :name %>
  <%= f.label :sku_number %> :
  <%= f.text_field :description  %>
  <%= f.label :price %> :
  <%= f.text_field :price  %>
  <%= f.label :quantity %> :
  <%= f.text_field :quantity  %>
  <%= f.submit 'Create List' %>
<% end %>
